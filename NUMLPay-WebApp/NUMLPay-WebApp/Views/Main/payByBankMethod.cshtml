@model NUMLPay_WebApp.Models.ChallanVerification

@{
    Layout = "~/Views/Shared/_LayoutPageDashboard.cshtml";
    ViewBag.Title = "Add Challan for Verification";
}

@using (Html.BeginForm("payByBankMethod", "Main", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">

        <div class="col-md-13">

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <label style="color: #0e96eb; font-size: 20px; user-select: none;"><i class="fas fa-plus fa-fw "></i>Add Challan for Verification</label>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12">
                    <label class="text-primary">Challan Data</label>
                    <div class="row">
                        <div class="col-md-6">
                            <label>NUML Id *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.numlId" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Name *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.name" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Challan No *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.challanNo" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Fee Plan *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.feePlan" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Degree Name *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.degreeName" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Challan Type *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.challanType" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Fee Semester *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.feeSem" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Due Date *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.dueDate" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Total Fee *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.totalFee" readonly="readonly" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Fine *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.fine" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Total Fee with Fine *</label>
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.totalFeewithFine" readonly="readonly" />
                            </div>
                        </div>
                    </div>

                        <div class="row">
                            <div class="col-md-12">
                                <label>Add Challan Image *</label>
                                <div class="form-group">
                                    <input type="file" id="imageInput" name="imageFile" class="form-control" accept="image/*">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mt-5">
                                <div class="text-center">
                                    <label class="mb-2">Added Image *</label>
                                    <div class="form-group">
                                        <img id="imageView" class="img-fluid rounded mx-auto d-block" style="max-width: 200px;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-md-4 mx-auto">
                                <label></label>
                                <center>
                                    <div class="form-group">
                                        <input type="submit" value="Add Challan for Verification" class="btnLogin" />
                                    </div>
                                </center>
                            </div>
                        </div>

                    </div>
                </div>
        </div>
    </div>
        </div>
}

<script>
    $(function () {
        $("#imageInput").change(function () {
            var reader = new FileReader();
            reader.onload = function () {
                $("#imageView").attr("src", reader.result).show();
            };
            if (this.files && this.files[0]) {
                reader.readAsDataURL(this.files[0]);
            }
        });
    });
</script>