@model NUMLPay_WebApp.Models.Users

@{
    Layout = "~/Views/Shared/_LayoutPageDashboard.cshtml";
    ViewBag.Title = "Update User";
}


@using (Html.BeginForm("updateUser", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">

        <div class="col-md-13">

            <div id="customAlertContainer" class="position-fixed top-0 end-0 p-3">
                <div id="customAlert" class="alert @ViewBag.AlertType alert-dismissible fade show" role="alert">
                    @ViewBag.AlertMessage
                    <button type="button" class="btn-close" style="display: @ViewBag.Display" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <label style="color: #0e96eb; font-size: 20px; user-select: none;"><i class="fas fa-plus fa-fw "></i>Update User</label>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <label class="text-primary">Personal Data</label>
                        <div class="col-md-6">
                            <label>NUML Id *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.numl_id, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter NUML Id", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.numl_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Name *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter Name" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Father Name *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.father_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter Father Name" } })
                                @Html.ValidationMessageFor(model => model.father_name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>DOB *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.date_of_birth, new { htmlAttributes = new { @class = "form-control", type = "text", onfocus = "(this.type='date')", onblur = "if(!this.value)this.type='text'", placeholder = "Please Enter Date of Birth" } })
                                @Html.ValidationMessageFor(model => model.date_of_birth, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Email *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "Please Enter Email" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Contact Number *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter Contact Number" } })
                                @Html.ValidationMessageFor(model => model.contact, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>CNIC *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.nic, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter CNIC" } })
                                @Html.ValidationMessageFor(model => model.nic, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <label class="text-primary">University Data</label>
                        <div class="col-md-6">
                            <label>Campus *</label>
                            <div class="form-group">
                                <select id="campusDropdown" class="form-control">
                                    <option value="">Select Campus</option>
                                    @foreach (var campus in ViewBag.campusList)
                                    {
                                        <option value="@campus.Value" @(campus.Selected ? "selected" : "")>@campus.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Faculty *</label>
                            <div class="form-group">
                                <select id="facultyDdl" class="form-control">
                                    <option>Select Faculty</option>
                                    @foreach (var faculty in ViewBag.facultyList)
                                    {
                                        <option value="@faculty.Value" @(faculty.Selected ? "selected" : "")>@faculty.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Department *</label>
                            <div class="form-group">
                                <select id="deptDdl" class="form-control">
                                    <option value="">Select Department</option>
                                    @foreach (var dept in ViewBag.deptList)
                                    {
                                        <option value="@dept.Value" @(dept.Selected ? "selected" : "")>@dept.Text</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.dept_id, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.dept_id) <!-- Add a hidden input field -->
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Academic Level *</label>
                            <div class="form-group">
                                <select id="academicDdl" class="form-control">
                                    <option value="">Select Academic Level</option>
                                    @foreach (var level in ViewBag.academicLevels)
                                    {
                                        <option value="@level.Value" @(level.Selected ? "selected" : "")>@level.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Degree *</label>
                            <div class="form-group">
                                <select id="degreeDdl" class="form-control">
                                    <option value="">Select Degree</option>
                                    @foreach (var degree in ViewBag.degreeList)
                                    {
                                        <option value="@degree.Value" @(degree.Selected ? "selected" : "")>@degree.Text</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.degree_id, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.degree_id) <!-- Add a hidden input field -->
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Admission Session *</label>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.admission_session, ViewBag.admissionSession as SelectList, "Select Admission Session", new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.admission_session, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Semester *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.semester, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter Semester", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.semester, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Fee Plan *</label>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.fee_plan, ViewBag.feePlan as SelectList, "Select Fee Plan", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fee_plan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Semester Fee *</label>
                            <div class="form-group">
                                <select name="semDdl" class="form-control">
                                    <option>Select Semester Fees</option>
                                    @foreach (var sem in ViewBag.semFee)
                                    {
                                        <option value="@sem.Value" @(sem.Selected ? "selected" : "")>@sem.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Bus Fee *</label>
                            <div class="form-group">
                                <select name="busDdl" class="form-control">
                                    <option>Select Bus Fees</option>
                                    @foreach (var bus in ViewBag.busFee)
                                    {
                                        <option value="@bus.Value" @(bus.Selected ? "selected" : "")>@bus.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Hostel Fee *</label>
                            <div class="form-group">
                                <select name="hostelDdl" class="form-control">
                                    <option>Select Hostel Fees</option>
                                    @foreach (var hostel in ViewBag.hostelFee)
                                    {
                                        <option value="@hostel.Value" @(hostel.Selected ? "selected" : "")>@hostel.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Status of Degree *</label>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.status_of_degree, ViewBag.statusDegree as SelectList, "Select Status", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.status_of_degree, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Total Relegated Semesters</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.is_relegated, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter " } })
                                @Html.ValidationMessageFor(model => model.is_relegated, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       

                        <div class="col-md-6">
                            <label>Passed Semesters (in case of Ceased Students)</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.passed_ceased_sems, new { htmlAttributes = new { @class = "form-control", placeholder = "Please Enter Passed Semesters in case of Ceased Student" } })
                                @Html.ValidationMessageFor(model => model.passed_ceased_sems, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Status *</label>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.is_active, ViewBag.is_active as SelectList, "Select Status", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Add Profile Image *</label>
                            <div class="form-group">
                                <input type="file" id="imageInput" name="imageFile" class="form-control" accept="image/*">
                            </div>
                        </div>

                    </div>




                    <div class="row">
                        <div class="col-md-12 mt-5">
                            <div class="text-center">
                                <label class="mb-2">Profile Image *</label>
                                <div class="form-group">
                                    <img id="imageView" src="@(Model.image)" alt="Your Picture" class="img-fluid rounded mx-auto d-block" style="max-width: 200px;">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-5 mb-5">
                        <div class="col-md-4 mx-auto">
                            <center>
                                <div class="form-group">
                                    <input type="submit" value="Update User" class="btnLogin" />
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
                </div>
        </div>
    </div>
}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script type="text/jscript">

    $('#academicDdl').change(function () {
        $.getJSON('/Home/getDegrees?deptId=' + $('#deptDdl').val() + '&levelId=' + $('#academicDdl').val(), function (data) {
            var items = '<option>Select Degree</option>';
            $.each(data, function (i, degree) {
                items += "<option value='" + degree.Value + "'>" + degree.Text + "</option>";
            });
            $('#degreeDdl').html(items);
        });
    });

    $(function () {
        $("#imageInput").change(function () {
            var reader = new FileReader();
            reader.onload = function () {
                $("#imageView").attr("src", reader.result).show();
            };
            if (this.files && this.files[0]) {
                reader.readAsDataURL(this.files[0]);
            }
        });
    });
    </script>

    <script src="~/js/cascadingDropdown.js"></script>


