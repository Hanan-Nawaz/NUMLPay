@model NUMLPay_WebApp.Models.Challans

@{
    Layout = "~/Views/Shared/_LayoutPageDashboard.cshtml";
    ViewBag.Title = "Update Challan";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">

        <div class="col-md-13">

            <div id="customAlertContainer" class="position-fixed top-0 end-0 p-3">
                <div id="customAlert" class="alert @ViewBag.AlertType alert-dismissible fade show" role="alert">
                    @ViewBag.AlertMessage
                    <button type="button" class="btn-close" style="display: @ViewBag.Display" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

            @Html.HiddenFor(model => model.challan_id)

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <label style="color: #0e96eb; font-size: 20px; user-select: none;"><i class="fas fa-pencil-alt fa-fw"></i>Update Challan</label>
                            </center>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-6">
                        <label>Fee For Session *</label>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.session, ViewBag.Sessions as SelectList, "Select Admission Session", new { @class = "form-control", @disabled = "true" })
                            @Html.ValidationMessageFor(model => model.session, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="col-md-6">
                        <label>Fee For *</label>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.fee_for, ViewBag.feeFor as SelectList, "Select Fee For", new { @class = "form-control", @disabled = "true" })
                            @Html.ValidationMessageFor(model => model.fee_for, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.HiddenFor(model => model.session)
                    @Html.HiddenFor(model => model.fee_for)


                </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Due Date *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.due_date, new { htmlAttributes = new { @class = "form-control", type = "date", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.due_date, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="col-md-6">
                            <label>Valid Date *</label>
                            <div class="form-group">
                                @Html.EditorFor(model => model.valid_date, new { htmlAttributes = new { @class = "form-control", type = "date", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.valid_date, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Status *</label>
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.is_active, ViewBag.is_active as SelectList, "Select Status", new { @class = "form-control", @required = "true" })
                                @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-4 mx-auto">
                            <center>
                                <div class="form-group">
                                    <input type="submit" value="Update Challan" class="btnLogin" />
                                </div>
                            </center>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

